<nav class="flex mb-6" aria-label="Breadcrumb">
  <ol class="inline-flex items-center space-x-1 md:space-x-3">
    <% @breadcrumbs.each_with_index do |crumb, index| %>
      <li class="<%= index == 0 ? 'inline-flex items-center' : '' %>">
        <% if index > 0 %>
          <div class="flex items-center">
            <svg class="w-3 h-3 text-fg-400 dark:text-fg-500 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
            </svg>
        <% end %>
            
        <% if crumb[:path].present? %>
          <%= link_to crumb[:title], crumb[:path], class: "ml-1 text-sm font-medium text-fg-700 hover:bg-bg-100 dark:text-fg-300 dark:hover:bg-bg-800 rounded px-2 py-1 transition duration-150 ease-in-out cursor-pointer md:ml-2" %>
        <% else %>
          <span class="ml-1 text-sm font-medium text-fg-500 dark:text-fg-400 px-2 py-1 md:ml-2" aria-current="page"><%= crumb[:title] %></span>
        <% end %>
            
        <% if index > 0 %>
          </div>
        <% end %>
      </li>
    <% end %>
  </ol>
</nav>