<div class="page-show">
  <div class="mb-4">
    <%= link_to "â† Back to pages", pages_path, class: "text-blue-500 hover:text-blue-700" %>
  </div>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold"><%= @page.title %></h1>
    <div class="flex gap-2">
      <%= link_to "Edit", edit_page_path(@page), class: "bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded" %>
      <%= button_to "Delete", page_path(@page), method: :delete, class: "bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded", data: { confirm: "Are you sure?" } %>
    </div>
  </div>

  <% if @page.parent_page %>
    <div class="mb-4 text-sm">
      <span class="text-gray-500">Parent page:</span>
      <%= link_to @page.parent_page.title, page_path(@page.parent_page), class: "text-blue-500 hover:text-blue-700" %>
    </div>
  <% end %>

  <% if @page.child_pages.any? %>
    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-2">Sub-pages</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
        <% @page.child_pages.each do |child| %>
          <div class="border rounded p-3 hover:bg-gray-50">
            <%= link_to child.title, page_path(child), class: "font-medium" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="blocks-container prose">
    <% @page.blocks.order(:position).each do |block| %>
      <%= render 'blocks/block', block: block %>
    <% end %>
  </div>

  <div class="mt-6">
    <button id="show-block-form" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
      Add block
    </button>
    
    <div id="block-form-container" class="mt-4 hidden">
      <%= render 'blocks/form', page: @page %>
    </div>
  </div>

  <div class="page-actions mt-4">
    <%= link_to "Edit Page", edit_page_path(@page), class: "btn btn-primary" %>
    <%= link_to "Back to Pages", pages_path, class: "btn btn-secondary" %>
  </div>
</div> 

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const showFormButton = document.getElementById('show-block-form');
    const formContainer = document.getElementById('block-form-container');
    
    showFormButton.addEventListener('click', function() {
      formContainer.classList.toggle('hidden');
      showFormButton.textContent = formContainer.classList.contains('hidden') ? 'Add block' : 'Cancel';
    });
  });
</script>