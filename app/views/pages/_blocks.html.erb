<div id="blocks" class="prose dark:prose-invert">
  <% page.grouped_blocks.each do |item| %>
    <% if item.is_a?(Hash) %>
      <div class="group">
        <%= render 'blocks/list_group', list_type: item[:type], blocks: item[:blocks] %>
      </div>
    <% else %>
      <%= render 'blocks/block', block: item, last_item: item == page.grouped_blocks.last, first_item: item == page.grouped_blocks.first %>
    <% end %>
  <% end %>
</div> 