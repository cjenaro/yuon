<div class="pages-index">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-fg-800 dark:text-fg-100">My Pages</h1>
    <%= link_to "New Page", new_page_path, class: "bg-accent-500 hover:bg-accent-600 text-bg-50 px-4 py-2 rounded dark:bg-accent-600 dark:hover:bg-accent-700" %>
  </div>

  <% if @pages.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @pages.each do |page| %>
        <div class="border border-bg-200 rounded p-4 hover:shadow-md transition bg-bg-50 dark:bg-bg-800 dark:border-bg-700">
          <h2 class="text-xl font-semibold mb-2 text-fg-800 dark:text-fg-100"><%= link_to page.title, page_path(page), class: "hover:text-accent-600 dark:hover:text-accent-400" %></h2>
          <div class="text-sm text-fg-500 dark:text-fg-400">
            Created: <%= page.created_at.strftime("%b %d, %Y") %>
          </div>
          <div class="mt-2 flex justify-between">
            <%= link_to "View", page_path(page), class: "text-accent-600 hover:text-accent-800 dark:text-accent-400 dark:hover:text-accent-300" %>
            <%= link_to "Edit", edit_page_path(page), class: "text-accent-600 hover:text-accent-800 dark:text-accent-400 dark:hover:text-accent-300" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-bg-100 p-8 text-center rounded border border-bg-200 dark:bg-bg-800 dark:border-bg-700">
      <p class="text-fg-600 mb-4 dark:text-fg-300">You don't have any pages yet.</p>
      <%= link_to "Create your first page", new_page_path, class: "bg-accent-500 hover:bg-accent-600 text-bg-50 px-4 py-2 rounded dark:bg-accent-600 dark:hover:bg-accent-700" %>
    </div>
  <% end %>
</div> 