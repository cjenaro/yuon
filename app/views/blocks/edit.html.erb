<%= turbo_frame_tag dom_id(@block) do %>
  <div class="relative">
    <div class="absolute top-0 -left-6">
      <%= link_to page_path(@page), class: "text-gray-500 hover:text-gray-700", data: { turbo_frame: dom_id(@block) } do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
        </svg>
      <% end %>
    </div>

    <%= render 'form', page: @page, block: @block, block_type: @block_type %>
  </div>
<% end %> 